<% provide(:title, @alumnus.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="alumnus_info">
      <h1>
        <%= @alumnus.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @alumnus.events.any? %>
      <h3>Events (<%= @alumnus.events.count %>)</h3>
      <ol class="events">
        <%= render @alumnus.eventss %>
      </ol>
    <% end %>
  </div>
</div>
